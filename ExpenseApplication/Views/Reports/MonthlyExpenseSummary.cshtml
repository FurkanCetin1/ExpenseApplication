@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const modelData = @Json.Serialize(Model);

        const monthlyExpenseChart = new Chart(document.getElementById('monthlyExpenseChart'), {
            type: 'pie',
            data: {
                labels: modelData.map(item => item.month),
                datasets: [
                    {
                        label: 'Toplam Masraf',
                        data: modelData.map(item => item.totalExpense),
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)',
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)',
                        ],
                        borderWidth: 1,
                    },
                ],
            },
            options: {
                layout: {
                    padding: {
                        bottom(ctx) {
                            const chart = ctx.chart;
                            let pb = 0;
                            chart.data.datasets.forEach(function (el) {
                                const hOffset = el.hoverOffset || 0;
                                pb = Math.max(hOffset / 2 + 5, pb)
                            });
                            return pb;
                        }
                    }
                },
            }
        });
    </script>
}
